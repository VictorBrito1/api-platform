<table class="table table-striped table-bordered">
    <thead>
        <th>#</th>
        <th>Content</th>
        <th>Author</th>
    </thead>
    {% for comment in value %}
        <tr>
            <td>{{ comment.id }}</td>
            <td>{{ comment.content }}</td>
            <td>{{ comment.author.fullname }}</td>
        </tr>
    {% endfor %}
</table>